{%extends "admin/main.twig"%}
{% block title %}Управление ролями{% endblock %}
{% block wrapper %}

  <table class="table table-striped table-bordered table-condensed">
	<thead>
	  <tr>
		<th>Название</th>
		<th></th>
	  </tr>
	</thead>
	<tbody>

	  {%for role in roles%}
		<tr>
		  <td>{{role.name}}</td>
		  <td style="width: 160px;">
			<div class="btn-group" role="group" aria-label="...">
			  <a class="btn btn-default btn-sm" href="/admin/roles/{{role.id}}/update">Изменить</a>
			  <a class="btn btn-default btn-sm" href="/admin/roles/{{role.id}}/delete">Удалить</a>
			</div>
		  </td>
		</tr>
	  {%endfor%}

	</tbody>
  </table>  

{% endblock %}

{% block sidebar %}
  <ul class="nav nav-pills nav-stacked">
	<li><a href="{{ path_for('admin.roles.create')}}">Создать</a></li>
  </ul>
{% endblock %}