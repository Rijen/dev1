{% extends "admin/layout.twig" %}

{% block title %}Login{% endblock %}

{% block head %}
  {{ parent() }}
  <link rel="stylesheet" href="/static/admin/css/login.css" />
{% endblock %}

{% block content %}
  <div class="container">


	<div class="panel panel-default  form-signin">
	  <div class="panel-heading">
		<h3 class="panel-title">Please sign in</h3>
	  </div>
	  <div class="panel-body">
		{% include 'admin/partial/flash.twig' %}
		<form method="post" action="{{ path_for('admin.login') }}">

		  <div class="form-group {{errors.login?'has-error':''}}">
			<label for="inputLogin" class="sr-only">Email address</label>
			<input name="login" id="inputLogin" class="form-control" value="{{old.login}}" placeholder="Login"  autofocus>
			{% if errors.login %}
			  <span class="help-block">{{errors.login|first}}</span>
			{% endif %}
		  </div>
		  <div class="form-group {{errors.password?'has-error':''}}">
			<label for="inputPassword" class="sr-only">Password</label>
			<input name="password" type="password" id="inputPassword" class="form-control" value="{{old.password}}" placeholder="Password" >
			{% if errors.password %}
			  <span class="help-block">{{errors.password|first}}</span>
			{% endif %}
		  </div>
		  {{csrf.field|raw}}
		  <button class="btn btn-primary btn-block" type="submit">Sign in</button>
		</form>
	  </div>
	</div>



  </div> <!-- /container -->
{% endblock %}