{%extends "admin/main.twig"%}
{% set title = "User managament"%}
{% block wrapper %}

  <table class="table table-striped table-bordered table-condensed">
	<thead>
	  <tr>
		<th>Имя</th>
		<th>Логин</th>
		<th>Роль</th>
		<th></th>
	  </tr>
	</thead>
	<tbody>

	  {%for user in users%}
		<tr>
		  <td>{{user.name}}</td>
		  <td>{{user.login}}</td>
		  <td>{{user.role.name}}</td>
		  <td style="width: 160px;">
			<div class="btn-group" role="group" aria-label="...">
			  <a class="btn btn-default btn-sm" href="/users/{{user.id}}/update">Изменить</a>
			  <a class="btn btn-default btn-sm" href="/users/{{user.id}}/delete">Удалить</a>
			</div>
		  </td>
		</tr>
	  {%endfor%}

	</tbody>
  </table>  

{% endblock %}

{% block sidebar %}
  <ul class="nav nav-pills nav-stacked">
	<li><a href="{{ path_for('users.create')}}">Создать</a></li>
  </ul>
{% endblock %}