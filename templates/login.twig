{% extends "layout.twig" %}

{% block title %}Login{% endblock %}

{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="/static/admin/css/login.css" />
{% endblock %}

{% block content %}
	<div class="container">


		<div class="panel panel-default  form-signin">
			<div class="panel-heading">
				<h3 class="panel-title">{{lang.login.title}}</h3>
			</div>
			<div class="panel-body">
				{% include 'partial/flash.twig' %}
				<form method="post" action="{{ path_for('login') }}">

					<div class="form-group {{errors.login?'has-error':''}}">
						<input name="login" id="inputLogin" class="form-control" value="{{old.login}}" placeholder="{{lang.login.f_login}}"  autofocus>
						{% if errors.login %}
							<span class="help-block">{{errors.login|first}}</span>
						{% endif %}
					</div>
					<div class="form-group {{errors.password?'has-error':''}}">
						<input name="password" type="password" id="inputPassword" class="form-control" value="{{old.password}}" placeholder="{{lang.login.f_password}}" >
						{% if errors.password %}
							<span class="help-block">{{errors.password|first}}</span>
						{% endif %}
					</div>
					{{csrf.field|raw}}
					<button class="btn btn-primary btn-block" type="submit">{{lang.login.b_login}}</button>
				</form>
			</div>
		</div>



	</div> <!-- /container -->
{% endblock %}